@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<!-- Estilos personalizados -->
<style>
    .login-container {
        max-width: 400px;
        background-color: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .login-title {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-container">
        <h2 class="login-title text-center">
            <i class="fas fa-user-lock"></i> Inicio de sesión
        </h2>

        @if (@ViewData["userMessage"] != null)
        {
            <div class="alert alert-warning text-center">@ViewData["userMessage"]</div>
        }

        <form action="/Account/Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group my-3">
                <label for="exampleInputEmail1">
                    <i class="fas fa-envelope"></i> Correo electrónico
                </label>
                <input type="email" class="form-control rounded-pill shadow-sm" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu email" name="Email">
            </div>

            <div class="form-group my-3">
                <label for="exampleInputPassword1">
                    <i class="fas fa-lock"></i> Contraseña
                </label>
                <input type="password" class="form-control rounded-pill shadow-sm" id="exampleInputPassword1" placeholder="Contraseña" name="Password">
            </div>

            <button type="submit" class="btn btn-custom w-100 py-2 mt-3">Iniciar sesión</button>
        </form>

        <div class="text-center mb-3">
            ¿Aún no tienes cuenta? <a href="/Account/Register" class="text-primary fw-bold">Regístrate aquí</a>
        </div>

    </div>
</div>

<!-- FontAwesome para iconos -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
