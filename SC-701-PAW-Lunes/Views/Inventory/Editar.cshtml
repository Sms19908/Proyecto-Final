@model SC_701_PAW_Lunes.Models.Inventory

@{
    Layout = "_Layout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inventory App - @ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS (optional) -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<h2>Editar Producto</h2>

<form method="post" asp-action="Editar">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Nombre"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Id Categoria</label>
        <input type="number" asp-for="Id_Cat" class="form-control" step="0.01">
        <span class="text-danger" asp-validation-for="Id_Cat"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input type="text" asp-for="Marca" class="form-control">
        <span class="text-danger" asp-validation-for="Marca"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input type="number" asp-for="Precio" class="form-control" step="0.01">
        <span class="text-danger" asp-validation-for="Precio"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Descripcion</label>
        <input type="text" asp-for="Descripcion" class="form-control">
        <span class="text-danger" asp-validation-for="Descripcion"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input type="number" asp-for="Cantidad" class="form-control" step="0.01">
        <span class="text-danger" asp-validation-for="Cantidad"></span>
    </div>

    <button type="submit" class="btn btn-danger">Guardar</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-primary">Cancelar</a>
